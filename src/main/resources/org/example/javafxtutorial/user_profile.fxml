<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxtutorial.UserProfile">
    <Rectangle height="54.0" layoutY="1.0" style="-fx-fill: lightblue; -fx-stroke: lightgray; -fx-stroke-width: 1;" width="902.0" />
    <Rectangle arcHeight="20.0" arcWidth="20.0" height="391.0" layoutX="14.0" layoutY="84.0" style="-fx-fill: white; -fx-stroke: lightgray; -fx-stroke-width: 1;" width="359.0" />
    <!-- Main container -->
    <VBox alignment="TOP_CENTER" layoutX="60.0" layoutY="252.0" spacing="20.0">
        <!-- Username and Bio -->
        <VBox alignment="CENTER" prefWidth="266.0" spacing="5.0">
            <!-- Initially a label, switches to text field on edit -->
            <StackPane>
                <Label fx:id="usernameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="John Doe" />
                <TextField fx:id="usernameField" style="-fx-font-size: 20px; -fx-font-weight: bold;" visible="false" />
            </StackPane>

            <StackPane>
                <Label fx:id="bioLabel" style="-fx-font-size: 14px;" text="Open-source enthusiast, loves coding." />
                <TextField fx:id="bioField" style="-fx-font-size: 14px;" visible="false" />
            </StackPane>
        </VBox>

           <!-- Stats Section -->
        <HBox alignment="CENTER" spacing="30.0">
            <VBox alignment="CENTER">
                <Label fx:id="repoCountLabel" style="-fx-font-size: 18px;" text="0" />
                <Label style="-fx-font-size: 12px; -fx-text-fill: gray;" text="BookLove" />
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="followerCountLabel" style="-fx-font-size: 18px;" text="0" />
                <Label style="-fx-font-size: 12px; -fx-text-fill: gray;" text="Followers" />
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="followingCountLabel" style="-fx-font-size: 18px;" text="0" />
                <Label style="-fx-font-size: 12px; -fx-text-fill: gray;" text="Following" />
            </VBox>
        </HBox>

                 <!-- Contact Information -->
        <VBox alignment="CENTER" prefHeight="52.0" prefWidth="116.0" spacing="10.0">
            <StackPane>
                <Label fx:id="emailLabel" text="Email: johndoe@example.com" />
                <TextField fx:id="emailField" visible="false" />
            </StackPane>
            <StackPane>
                <Label fx:id="websiteLabel" text="Website: https://johndoe.dev" />
                <TextField fx:id="websiteField" visible="false" />
            </StackPane>
        </VBox>
    </VBox>
     <Button fx:id="editProfileButton" layoutX="148.0" layoutY="493.0" onAction="#handleEditProfile" style="-fx-background-color: lightblue; -fx-font-size: 14px;" text="Edit Profile" />
     <!-- Profile Image -->
     <ImageView fx:id="profileImage" fitHeight="150.0" fitWidth="170.0" layoutX="109.0" layoutY="93.0" preserveRatio="true" />

</AnchorPane>
