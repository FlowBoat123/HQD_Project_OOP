<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="601.0" prefWidth="840.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserProfileController">
    <VBox layoutX="-0.5" layoutY="0.5">
        <StackPane prefHeight="44.0" prefWidth="943.0">
            <Rectangle height="74.0" style="-fx-fill: white; -fx-stroke: lightgray; -fx-stroke-width: 1;"
                       width="942.0"/>
            <VBox prefHeight="93.0" prefWidth="906.0">
                <HBox prefHeight="48.0" prefWidth="906.0">
                    <ImageView fx:id="imageView" fitHeight="43.0" fitWidth="114.0" onMouseClicked="#handleImageClick"
                               pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../../images/back.png"/>
                        </image>
                    </ImageView>
                </HBox>
                <HBox focusTraversable="true" prefHeight="66.0" prefWidth="943.0">
                    <Button fx:id="button1" mnemonicParsing="false" onAction="#showScene1" prefHeight="34.0"
                            prefWidth="130.0" text="Trang cá nhân">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <Button fx:id="button2" mnemonicParsing="false" onAction="#showScene2" prefHeight="32.0"
                            prefWidth="135.0" text="Sách đang đọc">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <Button fx:id="button3" mnemonicParsing="false" onAction="#showScene3" prefHeight="34.0"
                            prefWidth="131.0" text="Đã đọc xong">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </StackPane>
    </VBox>
    <StackPane layoutX="0.0" layoutY="74.0" fx:id="contentPane">
        <!-- Content will be dynamically loaded here -->
    </StackPane>
</AnchorPane>
